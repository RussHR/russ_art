- if (activeTab === 'undefined') {activeTab = ''};

nav.top-bar(role="navigation", data-topbar)
  ul.title-area
    li.name
      h1
        a(href="/") Russ Rinzler
    li.toggle-topbar.menu-icon
      a(href="#")
        span Menu

  section.top-bar-section
    ul.right
      li.has-dropdown.has-dropdown-artwork
        a(href="#") Artwork
        ul.dropdown
          li(class=activeTab === '2014' ? "active" : "")
            a(href="/2014.html") 2014
          li(class=activeTab === '2012' ? "active" : "")
            a(href="/2012.html") 2012
          li(class=activeTab === '2010_2011' ? "active" : "")
            a(href="/2010_2011.html") 2010 & 2011
      li(class=activeTab === 'about' ? "active" : "")
        a(href="/about.html") About/CV
      li(class=activeTab === 'links' ? "active" : "")
        a(href="/links.html") Contact/Links
